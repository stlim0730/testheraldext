{
  "manifest_version": 2,

  "name": "Optimizely Detector",
  "description": "Optimizely Extension",
  "version": "1.0",

  "permissions": [
    "activeTab",
    "notifications",
    "http://*/*",
    "https://*/*"
  ],

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "common/jquery-3.0.0.min.js",
        "content_scripts/content_script.js"
      ],
      "run_at": "document_end"
    }
  ],

  "background": {
    "scripts": [
      "common/jquery-3.0.0.min.js",
      "background/background.js"
    ],
    "persistent": true
  },

  "web_accessible_resources": ["injection_scripts/injection_script.js"],

  "page_action": {
    "default_icon": {
      "19": "ui/images/icon19.png",
      "38": "ui/images/icon38.png"
    },
    "default_title": "This page doesn't have Optimizely.",
    "default_popup": "popup.html"
  }
}
